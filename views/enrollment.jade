doctype html
html
  head
    div(style='background-color:#3b4674;color:white;padding:20px;')
      
        h1(style='color:white;')  AU LIBRARY 
    br
    br
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/webcamjs/1.0.25/webcam.min.js')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css')
    style(type='text/css').
      html {
      height: 100%;
      }
      body {
      height: 100%;
      margin: 0;
      background: linear-gradient(180deg, #687194 0%, #989eb6 20%, #ced2dd 80%) fixed;
      background-size: cover;
      background-repeat: no-repeat;
      background-repeat: no-repeat;
      background-attachment: fixed;
      font-family: Arial, Helvetica, sans-serif
      }
      h1 {
      color: whitesmoke;
      text-align: center;
      }
      .webMain {
      margin: 0px;
      }
      .take-snap {
      text-align: center;
      padding: 20px;
      }
      #my_camera {
      text-align: center;
      margin: auto;
      }
      #results {
      padding: 20px;
      border: 1px solid;
      background: #ccc;
      }
      .parent {
      padding: 20px;
      }
      .submit-button{
      margin: auto;
      text-align: center;
      }
  body
    .container-fluid

      .webMain
        form(method='POST', action='/enrollment/success')
          .row
            .col-md-4
              #my_camera
              .take-snap
                input.btn.btn-primary(type='button', value='Take Snapshot', onclick='take_snapshot()')
              input.image-tag(type='hidden', name='image0')
              input.image-tag(type='hidden', name='image1')
              input.image-tag(type='hidden', name='image2')
              input.image-tag(type='hidden', name='image3')
              input.image-tag(type='hidden', name='image4')
              h5
                | Enter your name :
                input(type='text', name='folder' placeholder="Your name.." class="form-control" required)
                br
                br
            .col-md-8
              .row
                .col-md-4
                  #results0.parent Your captured image will appear here...
                .col-md-4
                  #results1.parent
                .col-md-4
                  #results2.parent
              .row
                .col-md-2  
                .col-md-4
                  #results3.parent
                .col-md-4
                  #results4.parent
                .col-md-2  
              .row
                button.btn.btn-success.btn-lg.submit-button Submit
            
    script(language='JavaScript').
      Webcam.set({
      width: 450,
      height: 350,
      image_format: 'jpg',
      jpeg_quality: 90
      });
      Webcam.attach('#my_camera');
      var s = 0;
      function take_snapshot() {
      Webcam.snap(function (data_uri) {
      $(`input[name = image${s}`).val(data_uri);
      document.getElementById('results' + s).innerHTML = '<img src="' + data_uri +
      '" style="width:100%; height:100%"/>';
      });
      s++;
      if (s >= 5) {
      s = 0;
      }
      }
